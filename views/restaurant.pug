doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css', integrity='sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh', crossorigin='anonymous')
    style.
      .spaces {
      padding-left: 15px;
      padding-right: 15px;
      }
      form > label {
      display: inline-block;
      width: 8rem;
      }
    title Chinese Restaurant
  body
    .container
      .row
        .col-md-3
        .col-md-6
          .spaces(style='height: 4rem; margin-bottom: 20px; display: inline-block; background-color: aquamarine;')
            h3 Tao Bao Chinese Restaurant
          .spaces
            form(action='/update', method='POST')
              label.label(for='tableNo') Table No:
              input(type='number', name='tableNo', placeholder=tableNo, required='')
              br
              label.label(for='menuNo') Menu No:
              input(type='number', name='menuNo', placeholder=menuNo, required='')
              br
              label.label(for='outlet') Outlet:
              input(type='text', name='outlet', placeholder=outlet)
              br
              label.label(for='dateOo') Order Date:
              input(name='dateOo', type='date', placeholder=date, required='')
              br
              label.label(for='waiterNo') Waiter No:
              input(type='number', name='waiterNo', placeholder=waiterNo, required='')
              br
              br
              input(type='reset', value='Cancel')
              input(type='submit', value='Submit Order')
